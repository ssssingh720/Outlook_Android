<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

     <!-- Drop Shadow Stack -->
     <item>
        <shape>
            <padding android:top="1dp" android:right="1dp" android:bottom="1dp" android:left="1dp" />
            <corners android:radius="1dp" />
            <solid android:color="@color/white_transparent" />
        </shape>
    </item>

     <item>
        <shape>
            <padding android:top="0dp" android:right="2dp" android:bottom="2dp" android:left="0dp" />
            <corners android:radius="1dp" />
            <solid android:color="#509A9691" />
        </shape>
    </item>


    <!-- Background -->
    <item>
	<shape>
            <solid android:color="@color/white" />
	    <corners android:radius="1dp" />

	      <stroke android:width="1dp" android:color="@color/white_transparent"/>

	</shape>
    </item>

</layer-list>
