<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/app_red</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimaryDark">@color/app_red</item>
        <item name="colorAccent">@color/app_red</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:activatedBackgroundIndicator" tools:ignore="NewApi">@style/activated
        </item>
    </style>

    <style name="AppThemeBlue" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/app_blue</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimaryDark">@color/app_blue</item>
        <item name="colorAccent">@color/app_blue</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:activatedBackgroundIndicator" tools:ignore="NewApi">@style/activated
        </item>
    </style>


    <style name="activated" parent="AppTheme">
        <item name="android:background" tools:targetApi="11">@drawable/selector_activated_bg</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Widget.CardContentSubSection" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="textBold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textNormal">
        <item name="android:textStyle">normal</item>
    </style>
    <!-- Animation for dialog box -->
    <style name="DialogSlideAnim" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slideup</item>
        <item name="android:windowExitAnimation">@anim/slidedown</item>
    </style>
    <style name="EditTextView_Default">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@drawable/edit_text_bottom_line</item>
    </style>
    <style name="ToggleButton_default" parent="android:Widget.Button.Toggle">
        <item name="android:background">@drawable/toggle_btn_bg</item>
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>
</resources>
