<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/app_red</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimaryDark">@color/app_red</item>
        <item name="colorAccent">#FF4081</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:activatedBackgroundIndicator" tools:ignore="NewApi">@style/activated</item>
    </style>

    <style name="AppThemeBlue" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/app_blue</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimaryDark">@color/app_blue</item>
        <item name="colorAccent">#FF4081</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:activatedBackgroundIndicator" tools:ignore="NewApi">@style/activated</item>
    </style>


    <style name="activated" parent="AppTheme">
        <item name="android:background" tools:targetApi="11">@drawable/selector_activated_bg</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Widget.CardContentSubSection" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

</resources>
