<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">

    <RelativeLayout
        android:id="@+id/containerLyt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <WebView
            android:id="@+id/webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <include
            layout="@layout/bottom_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/webview" />
</RelativeLayout>
</ScrollView>
    <RelativeLayout
        android:id="@+id/bottomReltvLyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/black">
        <ImageView
            android:id="@+id/fontSizeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/icon_calendar"/>
        <ToggleButton
            android:layout_toRightOf="@+id/fontSizeBtn"
            android:id="@+id/nightModeBtn"
            android:padding="10dp"
            style="@style/ToggleButton_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/toggle_btn_bg"
            android:text="@null"/>
    </RelativeLayout>
    <SeekBar
        android:id="@+id/fontSeekBar"
        android:layout_above="@+id/bottomReltvLyt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:visibility="gone"
        />
</RelativeLayout>